# App配置
appname = "bitsync"
httpaddr = "127.0.0.1"
httpport = 8080
autorender = false
copyrequestbody = true
runmode = "dev"

# 加密解密
salt = ""
secretkey = ""

# MySQL数据库
mysql_user = "root"
mysql_password = ""
mysql_host = "127.0.0.1"
mysql_port = 3306
mysql_db = "bitsync"

# Redis
redis_scheme = "tcp"
redis_host = "127.0.0.1"
redis_port = 6379
redis_password =
redis_max_active = 10
redis_max_idle = 3
redis_idle_timeout = 300
redis_wait = true

redis_db_token = 0
redis_db_price = 1
redis_db_price_warn = 2
redis_db_pin = 3

# 微信开发配置
wechat_account_id = ""
wechat_app_id = ""
wechat_app_secret = ""
wechat_token = ""
wechat_encoding_aes_key = ""

# 引入价格监控配置
include "watch/watch.conf"
# 引入短信配置
include "sms.conf"